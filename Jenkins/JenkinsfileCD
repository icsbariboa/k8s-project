properties([githubProjectProperty(displayName: '', projectUrlStr: 'https://github.com/icsbariboa/k8s-project/'), pipelineTriggers([upstream('k8s-CI')])])
node("prod") {
        stage("Helm Repository") {
            bat "helm repo add k8s-repo https://raw.githubusercontent.com/icsbariboa/k8s-project/master/"
            bat "helm repo update"
        }
        stage("Run Producer") {
            bat "helm upgrade producer --install k8s-repo/Producer-0.1.0"
        }
        stage("Run Consumer") {
            bat "helm upgrade consumer --install k8s-repo/Consumer-0.1.0"
        }
}
